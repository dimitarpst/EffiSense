@model Appliance

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appliance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HomeId" class="control-label"></label>
                <select asp-for="HomeId" class ="form-control" asp-items="ViewBag.HomeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PowerRating" class="control-label"></label>
                <input asp-for="PowerRating" class="form-control" />
                <span asp-validation-for="PowerRating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#usageForm").submit(function (e) {
                e.preventDefault();

                var formData = $(this).serialize();  // Събиране на данни от формуляра

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Create")",
                    data: formData,
                    success: function (response) {
                        alert("Usage data saved successfully.");
                        // Можете да добавите тук обработка за обновяване на изгледа или други действия.
                    },
                    error: function () {
                        alert("Error saving usage data.");
                    }
                });
            });
        });
    </script>
}

