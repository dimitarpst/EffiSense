@model Appliance

@{
    ViewData["Title"] = "Delete Appliance";
}

<div class="container mt-4">
    <div class="card details-card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this appliance?</h4>
            <h5 class="card-title">
                @if (!string.IsNullOrEmpty(Model.IconClass))
                {
                    <i class="@Model.IconClass me-2"></i>
                }
                else
                {
                    <i class="fas fa-plug me-2"></i> 
                }
                @Html.DisplayFor(model => model.Name)
            </h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Home)</dt>
                <dd class="col-sm-8 col-md-9">@Model.Home?.HouseName</dd>

                @if (!string.IsNullOrEmpty(Model.Brand))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Brand)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Brand)</dd>
                }

                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.PowerRating)</dt>
                <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.PowerRating)</dd>

                @if (!string.IsNullOrEmpty(Model.EfficiencyRating))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.EfficiencyRating)</dt>
                    <dd class="col-sm-8 col-md-9">
                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.EfficiencyRating)</span>
                    </dd>
                }

                @if (!string.IsNullOrEmpty(Model.IconClass))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.IconClass)</dt>
                    <dd class="col-sm-8 col-md-9">
                        @Html.DisplayFor(model => model.IconClass)
                    </dd>
                }

                @if (Model.PurchaseDate.HasValue)
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.PurchaseDate)</dt>
                    <dd class="col-sm-8 col-md-9">@Model.PurchaseDate.Value.ToString("dd MMMM yyyy")</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Notes)</dt>
                    <dd class="col-sm-8 col-md-9" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Notes)</dd>
                }
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ApplianceId" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
