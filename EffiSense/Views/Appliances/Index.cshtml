@* EffiSense/Views/Appliances/Index.cshtml *@
@model IEnumerable<Appliance>

@{
    ViewData["Title"] = "My Appliances";
}

<div class="container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <p class="text-center my-4">
        <a asp-action="Create" class="btn btn-lg btn-primary shadow-sm">+ Create New Appliance</a>
    </p>

    <div class="masonry-grid-container">
        @foreach (var item in Model)
        {
            <div class="card shadow">
                <div class="card-body">

                    @* Top right info (Efficiency & Purchase Date) *@
                    <div class="card-top-right-details">
                        @if (!string.IsNullOrEmpty(item.EfficiencyRating))
                        {
                            <span class="card-efficiency-badge">@item.EfficiencyRating</span>
                        }
                        @if (item.PurchaseDate.HasValue)
                        {
                            <div class="card-purchase-info">Purch: @item.PurchaseDate.Value.ToString("dd/MM/yy")</div>
                        }
                    </div>

                    @* Header Section: Icon aligned with (Name | Brand) AND Home Name *@
                    <div class="card-header-flex">
                        <div class="card-icon-container">
                            @if (!string.IsNullOrEmpty(item.IconClass))
                            {
                                <i class="@item.IconClass card-icon"></i>
                            }
                            else
                            {
                                <i class="fas fa-plug card-icon"></i> @* Default icon *@
                            }
                        </div>
                        <div class="card-title-section">
                            <div class="card-title-brand-group">
                                <h5 class="card-main-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                @if (!string.IsNullOrEmpty(item.Brand))
                                {
                                    <span class="card-brand-separator"></span>
                                    <span class="card-brand-text">@Html.DisplayFor(modelItem => item.Brand)</span>
                                }
                            </div>
                            @if (item.Home != null && !string.IsNullOrEmpty(item.Home.HouseName))
                            {
                                <p class="card-home-info-header">@Html.DisplayFor(modelItem => item.Home.HouseName)</p>
                            }
                        </div>
                    </div>

                    @* Prominent Power Rating *@
                    <div class="card-power-details">
                        <span class="card-power-value">@Html.DisplayFor(modelItem => item.PowerRating)</span>
                        <span class="card-power-label">Power Rating</span>
                    </div>

                    @* Notes/Description - This is key for varying height *@
                    @if (!string.IsNullOrEmpty(item.Notes))
                    {
                        <p class="card-note-text">@Html.DisplayFor(modelItem => item.Notes)</p>
                    }
                    else
                    {
                        @* Ensures space is taken for flex-grow to work if notes are empty, can be styled with min-height in CSS *@
                        <div class="card-note-text-spacer"></div>
                    }

                    @* Action Buttons *@
                    <div class="actions-row row g-2">
                        <div class="col">
                            <a asp-action="Edit" asp-route-id="@item.ApplianceId" class="btn btn-sm btn-warning w-100">Edit</a>
                        </div>
                        <div class="col">
                            <a asp-action="Details" asp-route-id="@item.ApplianceId" class="btn btn-sm btn-info w-100">Details</a>
                        </div>
                        <div class="col">
                            <a asp-action="Delete" asp-route-id="@item.ApplianceId" class="btn btn-sm btn-danger w-100">Delete</a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
