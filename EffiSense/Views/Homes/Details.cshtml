@model Home

@{
    ViewData["Title"] = "Home Details";
}

<div class="container mt-4">
    <div class="card details-card shadow-sm">
        <div class="card-header">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.HouseName)</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Size)</dt>
                <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Size) sq. m</dd>

                @if (!string.IsNullOrEmpty(Model.HeatingType))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.HeatingType)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.HeatingType)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Location))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Location)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Location)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Address)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.BuildingType))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.BuildingType)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.BuildingType)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.InsulationLevel))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.InsulationLevel)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.InsulationLevel)</dd>
                }

                @if (Model.YearBuilt.HasValue)
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.YearBuilt)</dt>
                    <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.YearBuilt)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-8 col-md-9" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Description)</dd>
                }

            </dl>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Edit" asp-route-id="@Model.HomeId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
