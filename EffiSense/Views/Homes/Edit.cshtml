@model Home

@{
    ViewData["Title"] = "Edit Home";
}

<div class="form-container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <h4 class="text-center mb-4">@Model.HouseName</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="HomeId" />
        <input type="hidden" asp-for="UserId" />

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="fas fa-signature"></i></span>
            <div class="form-floating flex-grow-1">
                <input asp-for="HouseName" class="form-control" placeholder="Home Nickname" />
                <label asp-for="HouseName"></label>
            </div>
        </div>
        <span asp-validation-for="HouseName" class="text-danger d-block mb-2"></span>

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="fas fa-ruler-combined"></i></span>
            <div class="form-floating flex-grow-1">
                <input asp-for="Size" type="number" class="form-control" placeholder="Size (sq. m)" />
                <label asp-for="Size"></label>
            </div>
        </div>
        <span asp-validation-for="Size" class="text-danger d-block mb-2"></span>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Location" class="form-control" placeholder="Location (e.g., City, Area)" />
                        <label asp-for="Location"></label>
                    </div>
                </div>
                <span asp-validation-for="Location" class="text-danger d-block mb-2"></span>
            </div>
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Address" class="form-control" placeholder="Street Address" />
                        <label asp-for="Address"></label>
                    </div>
                </div>
                <span asp-validation-for="Address" class="text-danger d-block mb-2"></span>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="BuildingType" class="form-control" placeholder="Building Type (e.g., House, Apartment)" />
                        <label asp-for="BuildingType"></label>
                    </div>
                </div>
                <span asp-validation-for="BuildingType" class="text-danger d-block mb-2"></span>
            </div>
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-fire"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="HeatingType" class="form-control" placeholder="Heating Type (e.g., Gas, Electric)" />
                        <label asp-for="HeatingType"></label>
                    </div>
                </div>
                <span asp-validation-for="HeatingType" class="text-danger d-block mb-2"></span>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="InsulationLevel" class="form-control" placeholder="Insulation (e.g., High, Medium, Low)" />
                        <label asp-for="InsulationLevel"></label>
                    </div>
                </div>
                <span asp-validation-for="InsulationLevel" class="text-danger d-block mb-2"></span>
            </div>
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="YearBuilt" type="number" class="form-control" placeholder="Year Built" />
                        <label asp-for="YearBuilt"></label>
                    </div>
                </div>
                <span asp-validation-for="YearBuilt" class="text-danger d-block mb-2"></span>
            </div>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
            <div class="form-floating flex-grow-1">
                <textarea asp-for="Description" class="form-control" placeholder="Description or notes about the home" style="height: 100px"></textarea>
                <label asp-for="Description"></label>
            </div>
        </div>
        <span asp-validation-for="Description" class="text-danger d-block mb-2"></span>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
