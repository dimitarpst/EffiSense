@model IEnumerable<Home>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                House Name
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Size) (sq. m)
            </th>
            <th>
                Heating Type
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>                 
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>            
            <th>
                Building Type
            </th>            
            <th>
                Insulation Level
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseName)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeatingType)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>              
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.BuildingType)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.InsulationLevel)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.HomeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HomeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HomeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
