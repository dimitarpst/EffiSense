@model Usage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Usage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input aps-for="UserId " type="text" class="form-control" value="@ViewData["UserId"]" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ApplianceId" class="control-label"></label>
                <select asp-for="ApplianceId" class ="form-control" asp-items="ViewBag.ApplianceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnergyUsed" class="control-label"></label>
                <input asp-for="EnergyUsed" class="form-control" />
                <span asp-validation-for="EnergyUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsageFrequency" class="control-label"></label>
                <input asp-for="UsageFrequency" class="form-control" />
                <span asp-validation-for="UsageFrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#usageForm").submit(function (e) {
                e.preventDefault();

                var formData = $(this).serialize();  // Събиране на данни от формуляра

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Create")",
                    data: formData,
                    success: function (response) {
                        alert("Usage data saved successfully.");
                        // Можете да добавите тук обработка за обновяване на изгледа или други действия.
                    },
                    error: function () {
                        alert("Error saving usage data.");
                    }
                });
            });
        });
    </script>
}

