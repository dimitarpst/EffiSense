@model Usage

@{
    ViewData["Title"] = "Delete";
    var usageFrequencyMap = new Dictionary<int, string>
    {
        { 1, "Rarely" },
        { 2, "Sometimes" },
        { 3, "Often" },
        { 4, "Very Often" },
        { 5, "Always" }
    };
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Usage</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            House Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appliance.Home.HouseName)
        </dd>
        <dt class="col-sm-2">
            Appliance Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appliance.ApplianceId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Energy Used(kWh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnergyUsed)kWh
        </dd>
        <dt class="col-sm-2">
            Usage Frequency
        </dt>
        <dd class="col-sm-10">@(usageFrequencyMap.ContainsKey(Model.UsageFrequency) ? usageFrequencyMap[Model.UsageFrequency] : "Unknown")</dd>
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UsageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
