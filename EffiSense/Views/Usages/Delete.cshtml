@model Usage

@{
    ViewData["Title"] = "Delete Usage";
    var usageFrequencyMap = new Dictionary<int, string>
    {
        { 1, "Rarely" },
        { 2, "Sometimes" },
        { 3, "Often" },
        { 4, "Very Often" },
        { 5, "Always" }
    };
}

<div class="container py-5">
    <h1 class="text-center text-danger mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h3 class="card-title text-dark">Are you sure you want to delete this usage?</h3>
            <hr />
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>House Name:</strong> @Html.DisplayFor(model => model.Appliance.Home.HouseName)
                </li>
                <li class="list-group-item">
                    <strong>Appliance Name:</strong> @Html.DisplayFor(model => model.Appliance.Name)
                </li>
                <li class="list-group-item">
                    <strong>Date:</strong> @Html.DisplayFor(model => model.Date)
                </li>
                <li class="list-group-item">
                    <strong>Energy Used (kWh):</strong> @Html.DisplayFor(model => model.EnergyUsed)
                </li>
                <li class="list-group-item">
                    <strong>Usage Frequency:</strong> @(usageFrequencyMap.ContainsKey(Model.UsageFrequency) ? usageFrequencyMap[Model.UsageFrequency] : "Unknown")
                </li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="UsageId" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
        </div>
    </div>
</div>
