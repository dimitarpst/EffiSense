@model Usage

@{
    ViewData["Title"] = "Usage Details";
    Func<int, string> GetFrequencyText = (freq) =>
    {
        return freq switch
        {
            1 => "Rarely",
            2 => "Sometimes",
            3 => "Often",
            4 => "Very Often",
            5 => "Always",
            _ => "N/A"
        };
    };
}

<div class="container mt-4">
    <div class="card details-card shadow-sm">
        <div class="card-header">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">
                @if (!string.IsNullOrEmpty(Model.Appliance?.IconClass))
                {
                    <i class="@Model.Appliance.IconClass me-2"></i>
                }
                else if (!string.IsNullOrEmpty(Model.IconClass))
                {
                    <i class="@Model.IconClass me-2"></i>
                }
                else
                {
                    <i class="fas fa-bolt me-2"></i>
                }
                Usage Log for @Model.Appliance?.Name
            </h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Appliance)</dt>
                <dd class="col-sm-8 col-md-9">@Model.Appliance?.Name (@Model.Appliance?.Home?.HouseName)</dd>

                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-8 col-md-9">@Model.Date.ToString("dd MMMM yyyy")</dd>

                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.Time)</dt>
                <dd class="col-sm-8 col-md-9">@Model.Time.ToString("HH:mm")</dd>

                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.EnergyUsed)</dt>
                <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.EnergyUsed) kWh</dd>

                <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.UsageFrequency)</dt>
                <dd class="col-sm-8 col-md-9">@GetFrequencyText(Model.UsageFrequency)</dd>

                @* --- NEW FIELDS --- *@
                @if (!string.IsNullOrEmpty(Model.ContextNotes))
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.ContextNotes)</dt>
                    <dd class="col-sm-8 col-md-9" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.ContextNotes)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.IconClass)) // Display IconClass if set on Usage itself
                {
                    <dt class="col-sm-4 col-md-3">@Html.DisplayNameFor(model => model.IconClass)</dt>
                    <dd class="col-sm-8 col-md-9">
                        @Html.DisplayFor(model => model.IconClass) <i class="@Model.IconClass ms-2"></i>
                    </dd>
                }
                @* --- END NEW FIELDS --- *@

            </dl>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Edit" asp-route-id="@Model.UsageId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
