@model IEnumerable<Usage>

@{
    ViewData["Title"] = "My Energy Usages";
    Func<int, string> GetFrequencyText = (freq) => {
        return freq switch {
            1 => "Rarely",
            2 => "Sometimes",
            3 => "Often",
            4 => "Very Often",
            5 => "Always",
            _ => "N/A"
        };
    };
}

<div class="container-index">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <p class="text-center my-4">
        <a asp-action="Create" class="btn btn-lg btn-primary shadow-sm">+ Log New Usage</a>
    </p>

    <div class="row justify-content-center mb-4">
        <div class="col-md-4">
            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input type="date"
                       name="dateFilter"
                       class="form-control"
                       value="@ViewBag.CurrentFilter"
                       onchange="this.form.submit()" 
                />
                <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">Clear</a>
            </form>
        </div>
    </div>

    <div id="usagesGridContainer"> 
        @if (!Model.Any())
        {
            <p class="text-center text-muted">No usage data found for the selected criteria.</p>
        }
        else
        {
            <div class="masonry-grid-container">
                @foreach (var item in Model)
                {
                    <div class="card shadow">
                        <div class="card-body">

                            <div class="card-top-right-details">
                                <span class="card-efficiency-badge" title="Usage Frequency">
                                    <i class="fas fa-sync-alt me-1"></i>@GetFrequencyText(item.UsageFrequency)
                                </span>
                            </div>

                            <div class="card-header-flex">
                                <div class="card-icon-container">
                                    @if (!string.IsNullOrEmpty(item.Appliance?.IconClass))
                                    {
                                        <i class="@item.Appliance.IconClass card-icon"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-plug card-icon"></i> 
                                    }
                                </div>
                                <div class="card-title-section">
                                    <div class="card-title-brand-group">
                                        <h5 class="card-main-title">@Html.DisplayFor(modelItem => item.Appliance.Name)</h5>
                                        @if (item.Appliance?.Home != null && !string.IsNullOrEmpty(item.Appliance.Home.HouseName))
                                        {
                                            <span class="card-brand-separator"></span>
                                            <span class="card-brand-text">@Html.DisplayFor(modelItem => item.Appliance.Home.HouseName)</span>
                                        }
                                    </div>
                                    <p class="card-home-info-header">@item.Date.ToString("dd MMM yyyy") at @item.Time.ToString("HH:mm")</p>
                                </div>
                            </div>

                            <div class="card-power-details">
                                <span class="card-power-value">@Html.DisplayFor(modelItem => item.EnergyUsed)</span>
                                <span class="card-power-label">kWh</span>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(item.ContextNotes))
                            {
                                <p class="card-note-text">@Html.DisplayFor(modelItem => item.ContextNotes)</p>
                            }
                            else
                            {
                                <div class="card-note-text-spacer"></div> 
                            }
                            
                            <div class="actions-row row g-2">
                                <div class="col">
                                    <a asp-action="Edit" asp-route-id="@item.UsageId" class="btn btn-sm btn-warning w-100">Edit</a>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-id="@item.UsageId" class="btn btn-sm btn-info w-100">Details</a>
                                </div>
                                <div class="col">
                                    <a asp-action="Delete" asp-route-id="@item.UsageId" class="btn btn-sm btn-danger w-100">Delete</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/usagesIndex.js" asp-append-version="true"></script>
}
