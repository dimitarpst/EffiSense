@model IEnumerable<Usage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appliance.Home.HomeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appliance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnergyUsed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsageFrequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Appliance.Home.HomeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Appliance.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnergyUsed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsageFrequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UsageId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UsageId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UsageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
